{% extends 'base.html.twig' %}
{% block title %}
    {# Titre de la page #}
{% endblock %}

{% block body %}
<div class="contenu">
    <br><br><br><br>
    <h1 class="fst-italic text-center">Nos Cat√©gories</h1>
    <br>
    
    <main class="container">
        <div class="row" >
            
    {% for categorie in categories %}
        <div class="col-md-6 mb-4">
            <div class="card" id="images" style="width: 15rem;">
                <a href="{{ path('app_plats_categorie', {'categorie_id': categorie.id}) }}">
                <img src="{{ asset(categorie.image) }}" alt="{{ categorie.libelle }}" class="card-img-top" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                </a>
                    <h5 class="card-title text-center">{{ categorie.libelle }}</h5>
                </div>
            </div>
        </div>
        {% if loop.index is divisible by(2) %}
            </div>
            <div class="row">
        {% endif %}
    {% endfor %}
</div>
<br>
    </main>
</div>
{% endblock %}
