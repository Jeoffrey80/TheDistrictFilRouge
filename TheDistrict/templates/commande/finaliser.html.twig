{% extends 'base.html.twig' %}

{% block title %}Page de Finalisation{% endblock %}

{% block body %}
<div class="row" style="background-color: antiquewhite;">
    <div class="col-md-4">
        <div class="col-12" style="background:antiquewhite">
            <h1>Formulaire de Livraison</h1>
            {{ form_start(deliveryForm) }}
            {{ form_row(deliveryForm.nom) }}
            {{ form_row(deliveryForm.prenom) }}
            {# {{ form_row(deliveryForm.pays) }} #}
            {{ form_row(deliveryForm.ville) }}
            {{ form_row(deliveryForm.codepostal) }}
            {{ form_row(deliveryForm.adresse) }}
            {# {{ form_end(deliveryForm) }} #}
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-12" style="background:antiquewhite">
            <h1>Formulaire de Paiement</h1>
            {{ form_start(PaymentForm) }}
            {{ form_row(PaymentForm.numeroCarte) }}
            {{ form_row(PaymentForm.ccv) }}
            {{ form_row(PaymentForm.dateExpiration) }}
            {# {{ form_end(PaymentForm) }} #}
        </div>
    </div>
    <div class="col-md-4">
        <div class="col-12" style="background:antiquewhite">
            <h1>Formulaire de Facturation</h1>
            {{ form_start(FinaliserForm) }}
            {{ form_row(FinaliserForm.nom) }}
            {{ form_row(FinaliserForm.prenom) }}
            {# {{ form_row(FinaliserForm.pays) }} #}
            {{ form_row(FinaliserForm.ville) }}
            {{ form_row(FinaliserForm.codepostal) }}
            {{ form_row(FinaliserForm.adresse) }}
            {{ form_row(FinaliserForm.total) }} {# Ajout du champ total #}
            <a href="{{ path ('app_cgu') }}" target="_blank">Consulter les CGU</a><br>
            {{ form_widget(FinaliserForm.submit, { 'label': 'Finaliser la commande' }) }}
            {{ form_end(FinaliserForm) }}
        </div>
    </div>
</div>
{% endblock %}
