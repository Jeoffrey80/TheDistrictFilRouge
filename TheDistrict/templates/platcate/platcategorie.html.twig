{% extends 'base.html.twig' %}

{% block title %}
    
{% endblock %}

{% block body %}
    <div class="contenu">
        <h1 class="row col-12 fst-italic">Nos {{ categories.libelle}}</h1>
        <main class="container">
            <div class="row">
                {# Boucle pour afficher chaque plat #}
                {% for plat in plats %}
                    <div class="col-md-6 mb-4" style="border-radius: 50% 20% / 10% 40%;">
                        <div class="card" style="width: 18rem; border-radius: 50% 20% / 10% 40%;">
                            <img src="{{ asset(plat.image) }}" alt="{{ plat.libelle }}">
                            <div class="card-body">
                                <h5 class="card-title"> {{ plat.libelle }}</h5>
                                <p class="card-text">
                                    {{ plat.description}}
                                </p>
                                <p class="content bg-body"> {{ plat.prix}}</p>
                            </div>
                            <div class="mt-auto text-center"> <!-- Centrez le bouton -->
                                <a class="btn btn-primary" href="{{ path('panier_add_panier', { id: plat.id }) }}">Ajouter au panier</a>
                            </div>
                            {# Test des boutons d'ajout #}
                        </div>
                    </div>

                    

                    {# Si vous avez affiché 2 cartes, fermez la rangée actuelle et commencez une nouvelle rangée #}
                    {% if loop.index is even %}
                    </div>
                    <div class="row">
                    {% endif %}
                {% endfor %}
            </div>
        </main>
    </div>
    
{% endblock %}